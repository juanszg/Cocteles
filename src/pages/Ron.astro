---
import Bebida from "../components/Bebidas.astro";
import Header from "../components/Header.astro";
import { Image } from "astro:assets";
import botellaRon from "../images/Appleton_Estate.jpg";
import fresa from "../images/ron/fresa.jpg";
import pina from "../images/ron/Pi침a-colada.jpg";
import fresaColada from "../images/ron/fresa-colada.jpg";
import beach from "../images/ron/beach.jpg";
import mojito from "../images/ron/mojito.jpg";
import mojitoCoco from "../images/ron/mojito-coco.jpg";
import Hollywood from "../images/ron/hollywood.jpg";
import purple from "../images/ron/purple sky.jpg";
import Estrella from "../components/niveles.png";
import Lemon from "../components/onelemon.svg";
import Lemontwo from "../components/2lemon.svg";
import Lemonthree from "../components/3lemon.svg";
import Lemonfour from "../components/4lemon.svg";
---

<head>
    <meta charset="UTF-8" />
    <html lang="es">
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400..900&display=swap"
            rel="stylesheet"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Honk&family=Jersey+10&family=Rubik+80s+Fade&family=Rubik+Broken+Fax&family=Rubik+Dirt&family=Rubik+Glitch&family=Rubik+Mono+One&family=Suez+One&display=swap"
            rel="stylesheet"
        />

        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </html>

    <body>
        <div class="header">
            <Header />
        </div>

        <h1>RON</h1>
        <!--<Bebida 
     tituloBebida='La Fresa'
     ingredientes='Ingredientes:1oz de ron. Licor de naranja (curacao).Pure de fresa'
     metodo="Preparacion: Agregar los el escarchado de hielo a tope en un vaso largo, vertir la onza de ron, posteriormente 1 onza y media del licor de naranja y por ultimo el pure de fresa. Licuar y servir "
     /> -->
        <div class="grid-1">
            <div class="bebida">
                <Bebida
                    tituloBebida="La Fresa"
                    ingredientes="Ingredientes:- 1oz de ron- Licor de naranja (curacao)- Pure de fresa"
                    metodo="Preparacion: Agregar los el escarchado de hielo a tope en un vaso largo, vertir la onza de ron, posteriormente 1 onza y media del licor de naranja y por ultimo el pure de fresa. Licuar y servir."
                />
                <div class="lemon"><p class="dif">Dificultad: </p><img src={Lemon.src} alt="limon" /></div> 
            </div>
            <div class="imagen-coctel">
                <img src={fresa.src} alt="botella" />
            </div>
        </div>
        <div class="grid-1">
            <div class="bebida">
                <Bebida
