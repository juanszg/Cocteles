---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Ron from './Ron.astro';
import { Image } from 'astro:assets';
import botellaRon from '../images/Appleton_Estate.jpg';
---

<Layout title="Cocteles">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400..900&display=swap" rel="stylesheet">
	
<main>
		<h1><span class="text-gradient">COCTELES</span></h1>
	
		<ul role="list" class="link-card-grid">
			<Card
				href='/Ron'
				title="Ron"
				body="Encontraras 11 cocteles de Ron"
			/>
			<!-- <Image src={botellaRon} alt="botella" /> -->
			<Card
				href="/Vodka"
				title="Vodka"
				body="Encontraras 21 cocteles de Vodka"
			/>
			<Card
				href="/Tequila"
				title="Tequila"
				body="Encontraras 12 cocteles de Tequila."
			/>
			<Card
				href=""
				title="Whiskey"
				body="Encontraras 10 cocteles de Ginebra"
			/>
			<Card
				href=""
				title="Ginebra"
				body="Encontraras 5 cocteles de Ginebra"
			/>
		</ul>
</main>
</Layout>

<style>

	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		font-family: gabarito;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
		font-weight: 900;

	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions srong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
